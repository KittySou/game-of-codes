<div class="container" >
  <div class="box-grey" style="border-style: solid; border-width: 5px; align-items: center; background-color: lightgray; color: black; width: 90%; padding: 7px; margin-top: 20px; margin-bottom: 20px;">
    <h1 class="history-title">PAST RACE RESULTS:</h1>
  </div>
</div>




  <div class="box-white">
    <div class="results-history">
    <%# <ul> %>
      <% @racetracks.each do |race| %>
        <div class="result">
          <h6><%= race.winner == current_user ? "WIN 🏆" : "👎 LOSS"%></h6>
          <% opponent = race.player_1 == current_user ? race.player_2 : race.player_1 %>
          <p>VS - <%= opponent.username %> <%= cl_image_tag opponent.photo.key, class: "avatar" %></p>
          <p><%= race.deck.name%> - <%= race.updated_at.to_s(:short) %></p>
        </div>
      <% end %>
    <%# </ul> %>
    </div>
  </div>
