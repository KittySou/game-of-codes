          <% opponent = race.player_1 == current_user ? race.player_2 : race.player_1 %>
          <%  if race.winner == current_user %>
            <h6 style="color: green;">üèÜ WIN</h6>
          <%  else %>
            <h6 style="color: red;">üëé LOSS </h6>
          <% end %>

          <%# <h6><%= race.winner == current_user ? "WIN üèÜ" : "üëé LOSS"   IF UNCOMMENTED this statement is missing ruby tag and closing header %>

          <p>VS - <%= opponent.username %> <%= cl_image_tag opponent.photo.key, class: "avatar" %></p>
          <p><%= race.deck.name%> - <%= race.updated_at.to_s(:short) %></p>
        </div>
      <% end %>
    <%# </ul> %>
    </div>
  </div>
