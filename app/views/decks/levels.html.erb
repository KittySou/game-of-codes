<style>
  body {
    background-image: url("https://res.cloudinary.com/ddpxdkwin/image/upload/v1693491864/level-3-background_xn72cp.png");
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
  }
</style>


<div style="font-family: handjet;">
  <%# <h1 class="center my-5" id="levels-title">Levels</h1> %>
    <div class="justify-content-center levels-container">
        <div class="level-cards">
          <%= link_to decks_path(level: "beginner"), style: "text-decoration: none;" do %>
            <div class="level-card easy" style="border-style: solid; align-items:center">
              <p>EASY</p>
            </div>
          <% end %>
          <%= link_to decks_path(level: "intermediate"), style: "text-decoration: none; opacity: .4;" do %>
            <div class="level-card intermediate" style="border-style: solid;">
              <p>INTERMEDIATE</p>
            </div>
          <% end %>
          <%= link_to decks_path(level: "advanced"), style: "text-decoration: none; opacity: .4;" do %>
            <div class="level-card advanced" style="border-style: solid;">
              <p>ADVANCED</p>
            </div>
          <% end %>
          <%# <iframe src="https://giphy.com/embed/SwUwZMPpgwHNQGIjI7" width="120" height="66" frameBorder="0" class="giphy-embed" allowFullScreen></iframe> %>
          <%# <IMG SRC="https://i.pinimg.com/originals/61/91/3c/61913c632c0e3cb5641d4cedc4fc2084.gif" style="width=120"> %>
          <%= link_to decks_path(level: "multiplayer"), style: "text-decoration: none;" do %>
            <div class="level-card multiplayer-button" style="border-style: double; border-width: 15px; align-items: center;">
              <p>MULTIPLAYER</p>
            </div>
          <% end %>
        </div>
    </div>



   <%# <%= render "decks/progress_bar_levels"  %>

</div>
