<div class="container" data-controller="game">
  <div data-game-target="gameArea">
    <h1>Deck #1 (just as an example)</h1>

    <h2>Name of the deck:</h2>
    <h3><%= @deck.name %></h3>

    <div class="tips-card"
        data-game-target="tips">
      <h4>Tips:</h4>
      <h5><%= @deck.tips %></h5>
    </div>

    <button class="btn btn-primary"
            data-game-target="startButton"
            data-action="click->game#start">
      Start/Next
    </button>

    <div data-game-target="questionContainer"></div>

    <div data-game-target="answerConfirmation"></div>

  </div>

  <template data-game-target="questionTemplate">
    <h1>{{content}}</h1>
    <form action="" data-action="submit->game#send" data-game-target="form">
      {{#answers}}
        <input type="radio" name="answer" value="{{id}}" data-game-target="answer">
        <label for="{{content}}">{{content}}</label>
      {{/answers}}
      <input type="submit" value="check" data-game-target="checkButton">
      <button
        type="button"
        class="d-none"
        data-game-target="nextButton"
        data-action="click->game#nextQuestion"
      >
        Next
      </button>
    </form>
  </template>
</div>
