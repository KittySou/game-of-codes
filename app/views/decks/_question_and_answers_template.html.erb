<template data-game-target="questionTemplate">

  <h1>{{content}}</h1>

  <form action="" data-action="submit->game#send" data-game-target="form">
    <div class="answers-container">
      {{#answers}}
        <input type="radio" name="answer" value="{{id}}" data-game-target="answerInput">
        <label for="{{content}}">{{content}}</label>
      {{/answers}}
    </div>
    <input type="submit" value="check" data-game-target="checkButton">
    <button
      type="button"
      class="d-none"
      data-game-target="nextButton"
      data-action="click->game#nextQuestion"
    >
      Next
    </button>
  </form>

</template>
